<main class="two bd-content" id="content" role="main">
<div class="z">
        <div class="banner">
        <img src="images/cakes-banner.jpg">
        <div class="banner-info">
				<div class="container">
				<h1>Cakes </h1>
				<h3>Shpakes</h3>
				</div>
			</div>
        </div
        <section class="products">
            <div class="container">	
            <div class="card-wrapper">
                    <% settings.bakery.cakes.each do |cake| %>
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src=<%= cake.image %> alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title"><%= cake.name %><span class="card-text"><%= cake.price %></span></h5>
                                <p class="card-text"><%= cake.description %></p>
                                <div class="product-quantity">
                                    <input type="number" value="2" min="1">
                                    <button class="btn-sm add-product">
                                        Add to cart
                                    </button>
                                </div>
                                
                                
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </section>
    </div>
</div> <!--  	main	 -->




  